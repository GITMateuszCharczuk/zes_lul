@page
@model AddBlog
@{
    ViewData["Title"] = "Add_blog";
    var submitted = Model.Submitted;
    var blogPost = Model.AddBlogPostRequest;
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add Blog Post</h1>
    </div>
</div>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3"> 
                <label for="heading" class="form-label">Heading</label>
                <input type="text" required class="form-control" id="heading" asp-for="AddBlogPostRequest.Heading">
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.Heading"></span>
            </div>

            <div class="mb-3">
                <label for="PageTitle" class="form-label">Page Title</label>
                <input type="text" required class="form-control" id="PageTitle" asp-for="AddBlogPostRequest.PageTitle">
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.PageTitle"></span>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control floatingTextarea2" required id="content" asp-for="AddBlogPostRequest.Content"></textarea>
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.Content"></span>
            </div>

            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" required id="shortDescription" asp-for="AddBlogPostRequest.ShortDescription" />
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.ShortDescription"></span>
            </div>

            <div class="mb-3">
                <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                <input type="text" required class="form-control" id="featuredImageUrl" asp-for="AddBlogPostRequest.FeaturedImageUrl" />
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.FeaturedImageUrl"></span>
            </div>

            <div class="mb-3">
                <label for="urlHandle" class="form-label">Url Handle</label>
                <input type="text" required class="form-control" id="urlHandle" asp-for="AddBlogPostRequest.UrlHandle" />
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.UrlHandle"></span>
            </div>

            <div class="mb-3">
                <label for="publishDate" class="form-label">Publish Date</label>
                <input type="Date" required class="form-control" id="publishDate" asp-for="AddBlogPostRequest.PublishedDate" />
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.PublishedDate"></span>
            </div>

            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" required class="form-control" id="author" asp-for="AddBlogPostRequest.Author" />
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.Author"></span>
            </div>

            <div class="mb-3">
                <label for="tags" class="form-label">Tags (comma separated)</label>
                <input type="text" required class="form-control" id="tags" asp-for="AddBlogPostRequest.Tags">
                <span class="text-danger" asp-validation-for="AddBlogPostRequest.Tags"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isVisible" asp-for="AddBlogPostRequest.Visible">
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

@if (submitted)
{
    <div class="container mt-5">
        <h2>Blog Post Summary</h2>
        <p><strong>Heading:</strong> @blogPost.Heading</p>
        <p><strong>Page Title:</strong> @blogPost.PageTitle</p>
        <p><strong>Content:</strong> @blogPost.Content</p>
        <p><strong>Short Description:</strong> @blogPost.ShortDescription</p>
        <p><strong>Featured Image URL:</strong> @blogPost.FeaturedImageUrl</p>
        <p><strong>Url Handle:</strong> @blogPost.UrlHandle</p>
        <p><strong>Publish Date:</strong> @blogPost.PublishedDate.ToShortDateString()</p>
        <p><strong>Author:</strong> @blogPost.Author</p>
        <p><strong>Tags:</strong> @blogPost.Tags</p>
        <p><strong>Is Visible:</strong> @(blogPost.Visible ? "Yes" : "No")</p>
    </div>
}
