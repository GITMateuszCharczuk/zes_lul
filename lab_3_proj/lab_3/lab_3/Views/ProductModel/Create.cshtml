@{
ViewData["Title"] = "Create";
}

@model lab_3.Models.ProductModel
@{
var actionUrl = Model.Id == 0 ? "Create" : "Edit";
Console.WriteLine(actionUrl);
}

<form asp-action="@actionUrl" method="post" class="form">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">@((Model.Id == 0) ? "Create Product" : "Edit Product")</h4>
        </div>
        <div class="card-body">
            <!-- Product Name -->
            <div class="form-group">
                <label for="@Model.Name" class="control-label">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group">
                <label for="@Model.Category" class="control-label">Category</label>
                <input asp-for="Category" class="form-control" placeholder="Enter category" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label for="@Model.Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Availability -->
            <div class="form-group form-check">
                <input asp-for="@Model.IsAvailable" class="form-check-input" type="checkbox" id="IsAvailable" />
                <label for="IsAvailable" class="form-check-label text-black">Available</label>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">@((Model.Id == 0) ? "Create" : "Edit")</button>
            <a href="@Url.Action("Index", "ProductModel")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

<style>
    .form-check-input {
        
    }

    .form-check-input svg {
        fill: black !important;
    }
</style>